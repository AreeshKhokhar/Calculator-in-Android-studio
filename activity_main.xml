 <?xml version="1.0" encoding="utf-8"?> 
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:orientation="vertical" 
    android:padding="16dp" 
    android:gravity="center"> 
 
    <EditText 
        android:id="@+id/etFirstValue" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginBottom="16dp" 
        android:backgroundTint="#F7F8FA" 
        android:hint="Enter first number" 
        android:inputType="numberDecimal" 
        android:minHeight="60dp" 
        android:padding="10dp" 
        android:textSize="20sp" /> 
 
    <EditText 
        android:id="@+id/etSecondValue" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginBottom="16dp" 
        android:backgroundTint="#7D1B8E" 
        android:hint="Enter second number" 
        android:inputType="numberDecimal" 
        android:minHeight="60dp" 
        android:padding="10dp" 
        android:textSize="20sp" /> 
 
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="vertical"> 
 
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal"> 
 
            <Button 
                android:id="@+id/btnSeven" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="7" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnEight" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="8" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnNine" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="9" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnDivide" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#ED1E5E" 
                android:onClick="onOperatorClick" 
                android:text="/" 
                android:textSize="30sp" /> 
        </LinearLayout> 
 
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal"> 
 
            <Button 
                android:id="@+id/btnFour" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="4" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnFive" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="5" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnSix" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="6" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnMultiply" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#ED1E5E" 
                android:onClick="onOperatorClick" 
                android:text="*" 
                android:textSize="30sp" /> 
        </LinearLayout> 
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal"> 
 
            <Button 
                android:id="@+id/btnOne" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="1" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnTwo" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="2" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnThree" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="3" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnSubtract" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#ED1E5E" 
                android:onClick="onOperatorClick" 
                android:text="-" 
                android:textSize="30sp" /> 
        </LinearLayout> 
 
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal"> 
 
            <Button 
                android:id="@+id/btnClear" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#EB3F3F" 
                android:onClick="onClearClick" 
                android:text="C" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnZero" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#DB9A9A" 
                android:onClick="onNumberClick" 
                android:text="0" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnCalculate" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#990E0E" 
                android:onClick="calculateResult" 
                android:text="=" 
                android:textSize="30sp" /> 
 
            <Button 
                android:id="@+id/btnAdd" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:backgroundTint="#ED1E5E" 
                android:onClick="onOperatorClick" 
                android:text="+" 
                android:textSize="30sp" /> 
 
 
        </LinearLayout> 
 
    </LinearLayout> 
</LinearLayout> 
